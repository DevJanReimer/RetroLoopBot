{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
